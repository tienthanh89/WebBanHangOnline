@model WebBanHangOnline.Models.ViewModels.User.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid ">
    <div class="container ">
        <h1 class="mb-4 text-center">Đăng ký</h1>
        <form method="post" asp-action="register" asp-controller="customer" enctype="multipart/form-data">
            <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                <div class="form-group mb-3">
                    <label asp-for="@Model.Id" class="my-1"></label><sup>*</sup>
                    <input asp-for="@Model.Id" class="form-control " autofocus>
                    <span asp-validation-for="@Model.Id" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="@Model.ImageUrl" class="my-1"></label>
                    <input type="file" name="file" class="form-control"></>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="@Model.Password" class="my-1"></label><sup>*</sup>
                    <input asp-for="@Model.Password" class="form-control">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Name" class="my-1"></label><sup>*</sup>
                    <input asp-for="@Model.Name" class="form-control">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Gender"></label>
                    <div class="d-flex gap-3">
                        <div class="radio">
                            <input asp-for="Gender" type="radio" id="maleRadio" value="true" checked>
                            <label for="maleRadio">Nam</label>
                        </div>
                        <div class="radio">
                            <input asp-for="Gender" type="radio" id="femaleRadio" value="false">
                            <label for="femaleRadio">Nữ</label>
                        </div>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.BirthDate" class="my-1"></label><sup>*</sup>
                    <input asp-for="@Model.BirthDate" class="form-control" style="width:fit-content">
                    <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Address" class="my-1"></label><sup>*</sup>
                    <input asp-for="@Model.Address" class="form-control">
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Phone" class="my-1"></label><sup>*</sup>
                    <input asp-for="@Model.Phone" class="form-control">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Email" class="my-1"></label>
                    <input asp-for="@Model.Email" class="form-control">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" href="javascript:history.back()">Quay lại</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>