@model IEnumerable<WebBanHangOnline.Models.ViewModels.ProductCategoryListVM>

<h4>Danh mục sản phẩm</h4>
<ul class="list-unstyled fruite-categorie">
    
    @{
        var stt = 1;
        int? count = 0;
    }
    @foreach(var i in Model)
    {
        <li>
            <div class="d-flex justify-content-between fruite-name">
                <a href="javascript:void(0)" onclick="loadProductCategory('@i.Id', @stt)">
                    <i class="fas fa-apple-alt me-2"></i>
                    @i.Title
                </a>
                <span>(@i.Count)</span>
            </div>
        </li>
        stt++;
        count += @i.Count;
    }
    
    <li>
        <div class="d-flex justify-content-between fruite-name">
            <a href="javascript:void(0)" onclick="loadData()">
                <i class="fas fa-apple-alt me-2"></i>
                Tất cả
            </a>
            <span>(@count)</span>
        </div>
    </li>
</ul>

