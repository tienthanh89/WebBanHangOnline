@model OrderVM




<section id="" class="content flex-grow-1" style="height:100%">
    <form method="post">
        <input type="text" asp-for-="orderHeader.Id" hidden />
        <div class="card">
            <div class="card-header ">
                <div class=" row">
                    <div class="col-12 d-none d-md-block col-md-6">
                        <h2 class="mb-0">Đơn hàng</h2>
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a href="/order" class="btn btn-outline-info form-control btn-sm">Trở về</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center my-3 ">
                                    <span class="text-primary">Chi tiết đơn hàng:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Họ và tên</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.Name" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeader.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Số điện thoại</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.PhoneNumber" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeader.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Địa chỉ</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.StreetAddress" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeader.StreetAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Quận</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.District" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeader.District" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Thành phố</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.City" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeader.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.ApplicationUser.Email" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeader.ApplicationUser.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Ngày đặt hàng</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.OrderDate" type="date" class="form-control" />
                                    <span asp-validation-for="orderHeader.OrderDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Đơn vị vận chuyển</div>
                                <div class="col-9">
                                    <input type="text"
                                           asp-for="orderHeader.Carrier"
                                           id="carrier" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Mã vận chuyển</div>
                                <div class="col-9">
                                    <input type="text" asp-for="orderHeader.TrackingNumber" id="trackingNumber" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Ngày giao hàng</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.ShippingDate" type="date" class="form-control" />
                                    <span asp-validation-for="orderHeader.ShippingDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3  mb-1">Hạn thanh toán</div>
                                <div class="col-9  mb-1">
                                    <input type="date" class="form-control" />
                                </div>

                                <div class="col-3 ">Ngày thanh toán</div>
                                <div class="col-9 ">
                                    <input type="date" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Trạng thái</div>
                                <div class="col-9">
                                    <input type="text" asp-for="orderHeader.OrderStatus" class="form-control" />
                                    <span asp-validation-for="orderHeader.OrderStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <input type="submit" class="btn btn-warning form-control my-3" value="Cập nhật"
                                   asp-area="Admin"
                                   asp-action="UpdateDetail"
                                   asp-route-id="@Model.orderHeader.Id" />
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center my-3">
                                <span class="text-primary">Sản phẩm: </span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">
                                Trạng thái đơn hàng - @Model.orderHeader.OrderStatus
                            </label>

                            <ul class="list-group mb-3">
                                @foreach (var item in Model.orderDetailList)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <h6 class="my-0 text-primary">@item.Product.Title</h6>
                                                <small class="text-muted">Giá : @item.Price</small><br />
                                                <small class="text-muted">Số lượng : @item.Count</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@((item.Price * item.Count).ToString("c"))</p>
                                            </div>
                                        </div>
                                    </li>
                                }

                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.orderHeader.OrderTotal.ToString("c")</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if (Model.orderHeader.OrderStatus == TbStaticField.StatusPending)
                            {
                                <input type="submit" class="btn btn-primary form-control my-1" value="Chấp nhận đơn hàng"
                                       asp-area="Admin"
                                       asp-controller="Order"
                                       asp-action="StartProcessing"
                                       asp-route-id="@Model.orderHeader.Id" />

                            }
                            @if (Model.orderHeader.OrderStatus == TbStaticField.StatusInProcess)
                            {
                                <input type="submit" class="btn btn-primary form-control my-1" value="Giao hàng"
                                       onclick="return validateInput()"
                                       asp-area="Admin"
                                       asp-controller="Order"
                                       asp-action="ShipOrder"
                                       asp-route-id="@Model.orderHeader.Id"/>

                            }
                            @if (Model.orderHeader.OrderStatus != TbStaticField.StatusRefunded &&
                            Model.orderHeader.OrderStatus != TbStaticField.StatusCancelled &&
                            Model.orderHeader.OrderStatus != TbStaticField.StatusShipped)
                            {
                                <input type="submit" class="btn btn-danger form-control my-1" value="Hủy đơn hàng"
                                       asp-area="Admin"
                                       asp-controller="Order"
                                       asp-action="CancelOrder"
                                       asp-route-id="@Model.orderHeader.Id"/>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>


@section scripts
{


    <script>
        

        function validateInput() {
            if ($('#carrier').val() == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Chưa điền đơn vị vận chuyển'
                });
                return false;
            }


            if ($('#trackingNumber').val() == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Chưa điền mã vận chuyển'
                });
                return false;

            }
            return true;
        }
    </script>
}
