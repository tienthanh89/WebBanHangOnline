@model WebBanHangOnline.Models.TbCategory
@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin danh mục</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <!--gửi form tới action Add trong Category và thực thi action đó-->
                <!--asp-area="admin" asp-action="Add" asp-controller="Category"-->
                <form method="post" href="/admin">
                    <input asp-for="Id" hidden />
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group mb-3">
                            <label for="Title">Tên danh mục</label>
                            <input asp-for="Title" disabled id="Title" class="form-control" placeholder="Tên danh mục">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="MoTa">Mô tả</label>
                            <input asp-for="Description" disabled class="form-control" id="MoTa" placeholder="Mô tả">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="ViTri">Vị trí</label>
                            <input asp-for="Position" disabled class="form-control" id="ViTri" placeholder="Thứ tự">
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="SeoTitle">SeoTitle</label>
                            <input asp-for="SeoTitle" disabled class="form-control" id="SeoTitle" placeholder="SeoTitle">
                            <span asp-validation-for="SeoTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="SeoDescription">SeoDescription</label>
                            <input asp-for="SeoDescription" disabled class="form-control" id="SeoTitle" placeholder="SeoDescription">
                            <span asp-validation-for="SeoDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="SeoKeyWords">SeoKeyWords</label>
                            <input asp-for="SeoKeyWords" disabled class="form-control" id="SeoTitle" placeholder="SeoKeyWords">
                            <span asp-validation-for="SeoKeyWords" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-primary" href="/admin/category">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
