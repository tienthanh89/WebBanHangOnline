    <div class="tab-content">
        <div class="tab-pane fade show active" id="navs-top-home" role="tabpanel">
            <section class="content">
                <div class="bs-stepper-content">
                    <!--gửi form tới action Add trong Category và thực thi action đó-->
                    <!--asp-area="admin" asp-action="Add" asp-controller="Category"-->
                    <!--Form muốn tải ảnh lên controller phải có attribute enctype="multipart/form-data"-->
                    <form method="post" enctype="multipart/form-data">
                        <!-- your steps content here -->
                        <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group mb-3">
                                <label asp-for="@Model.tbProduct.Title" class="ms-2">Tên sản phẩm</label>
                                <input asp-for="@Model.tbProduct.Title" class="form-control " placeholder="Tên sản phẩm" autofocus>
                                <span asp-validation-for="@Model.tbProduct.Title" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="@Model.tbProduct.ProductCode">Mã sản phẩm</label>
                                <input asp-for="@Model.tbProduct.ProductCode" class="form-control" placeholder="">
                                <span asp-validation-for="@Model.tbProduct.ProductCode" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="@Model.tbProduct.Description">Mô tả</label>
                                <input asp-for="@Model.tbProduct.Description" class="form-control" placeholder="">
                                <span asp-validation-for="@Model.tbProduct.Description" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="@Model.tbProduct.Detail">Chi tiết</label>
                                <textarea id="textarea" asp-for="@Model.tbProduct.Detail" class="form-control" placeholder=""></textarea>
                                <span asp-validation-for="@Model.tbProduct.Detail" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3 d-flex gap-5">
                                <div class="d-flex">
                                    <input type="checkbox" asp-for="@Model.tbProduct.IsActive" class="" style="transform:scale(1.3)" placeholder="" checked>
                                    <label asp-for="@Model.tbProduct.IsActive" class="mx-3">Hiển thị</label>
                                </div>

                                <div class="d-flex">
                                    <input type="checkbox" asp-for="@Model.tbProduct.IsHot" class=" " style="transform:scale(1.3)" placeholder="">
                                    <label asp-for="@Model.tbProduct.IsHot" class="mx-3">Hot </label>
                                </div>

                                <div class="d-flex">
                                    <input type="checkbox" asp-for="@Model.tbProduct.IsFeature" class=" " style="transform:scale(1.3)" placeholder="">
                                    <label asp-for="@Model.tbProduct.IsFeature" class="mx-3">Nổi bật</label>
                                </div>

                                <div class="d-flex">
                                    <input type="checkbox" asp-for="@Model.tbProduct.IsSale" class=" " style="transform:scale(1.3)" placeholder="">
                                    <label asp-for="@Model.tbProduct.IsSale" class="mx-3">Khuyến mãi</label>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label>Danh mục sản phẩm</label>
                                <select asp-for="@Model.tbProduct.ProductCategoryId" asp-items="@Model.CategoryList" class="form-select">
